<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    tools:context=".activities.CancelInvoiceActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/productList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/TotalAmount"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

<TextView
    app:layout_constraintBottom_toTopOf="@+id/cancelInvBItn"
    android:id="@+id/TotalAmount"
    android:gravity="left"
    android:padding="10dp"
    android:background="@drawable/card_lined"
    android:text="TotalAmount 1200"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></TextView>
    <Button
        android:id="@+id/cancelInvBItn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="cancelInvoice"
        android:text="Cancel Invoice"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>