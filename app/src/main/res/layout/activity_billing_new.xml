<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/drawer_layout"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:fitsSystemWindows="true"

    tools:openDrawer="start">


    <com.google.android.material.appbar.AppBarLayout

        android:id="@+id/appbar"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:theme="@style/AppTheme.AppBarOverlay">


        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar"

            android:layout_width="match_parent"

            android:layout_height="?attr/actionBarSize"

            android:layout_margin="3dp"

            android:background="?attr/colorPrimary"

            app:layout_anchor="@+id/appBarLayout"

            app:layout_anchorGravity="center"

            app:popupTheme="@style/AppTheme.PopupOverlay">


            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="left"

                android:layout_margin="@dimen/_5sdp">


                <ImageView

                    android:id="@+id/ivToolBarBack"

                    style="@style/textRegular"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:src="@drawable/ic_baseline_arrow_back_24"

                    />


                <TextView

                    style="@style/textLarge"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:layout_marginStart="@dimen/_7sdp"

                    android:fontFamily="@font/inter"

                    android:text="@string/billing">


                </TextView>



            </LinearLayout>


            <LinearLayout

                android:id="@+id/lnHelp"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="right"

                android:layout_marginEnd="@dimen/_5sdp"

                android:background="@drawable/app_bar_structure"

                android:orientation="horizontal"

                android:padding="8dp">


                <Button

                    android:id="@+id/helpLine"

                    android:layout_width="20dp"

                    android:layout_height="20dp"

                    android:layout_alignParentEnd="true"

                    android:layout_gravity="right"

                    android:layout_marginRight="5dp"

                    android:background="@drawable/icons8_whatsapp_144"

                    android:gravity="center_horizontal" />


                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:fontFamily="@font/inter"

                    android:text="Help">


                </TextView>

            </LinearLayout>


            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="right"

                android:layout_margin="7dp">


            </LinearLayout>


            <LinearLayout

                android:id="@+id/lnYouTube"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="right"

                android:background="@drawable/app_bar_structure"

                android:orientation="horizontal"

                android:padding="8dp">



                <Button

                    android:id="@+id/wathcDemo"

                    android:layout_width="20dp"

                    android:layout_height="20dp"

                    android:layout_gravity="right"

                    android:layout_marginRight="5dp"

                    android:layout_toLeftOf="@+id/helpLine"

                    android:background="@mipmap/youtube"

                    android:gravity="center_horizontal" />


                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:fontFamily="@font/inter"

                    android:text="Demo">


                </TextView>


            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView

        android:id="@+id/mainSv"

        android:layout_above="@+id/viewDetsLay"

        android:layout_width="match_parent"

        android:layout_below="@+id/appbar"

        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:fitsSystemWindows="true"

            android:background="@color/colorPrimary"

            android:orientation="horizontal"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"

            >

            <ScrollView

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:background="@drawable/layout__background_drawable"

                android:fillViewport="true">


                <!--    android:id="@+id/mainview"-->

                <!--    android:layout_width="match_parent"-->

                <!--    android:layout_height="wrap_content"-->

                <!--    android:background="#ffffff"-->

                <!--    xmlns:android="http://schemas.android.com/apk/res/android"-->

                <!--    xmlns:app="http://schemas.android.com/apk/res-auto"-->

                <!--    xmlns:tools="http://schemas.android.com/tools">-->

                <LinearLayout


                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:fitsSystemWindows="true"

                    android:orientation="vertical"

                    >


                    <LinearLayout

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        >

                        <LinearLayout

                            android:layout_margin="10dp"

                            android:layout_width="match_parent"

                            android:layout_weight="1.2"

                            android:layout_gravity="center"

                            android:layout_height="match_parent"

                            android:orientation="horizontal">


                            <TextView


                                android:layout_width="wrap_content"

                                android:fontFamily="@font/inter"

                                android:textSize="16sp"

                                android:layout_height="wrap_content"

                                android:layout_gravity="center"

                                android:text="@string/bill_number" />


                            <EditText

                                android:id="@+id/billNo"

                                android:layout_width="40dp"

                                android:textSize="14sp"

                                android:layout_height="30dp"

                                android:layout_gravity="center"

                                android:layout_marginLeft="8dp"

                                android:background="@drawable/layout_background"

                                android:fontFamily="@font/inter"

                                android:gravity="left"

                                android:inputType="number"

                                android:textStyle="bold"

                                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                        </LinearLayout>


                        <LinearLayout

                            android:paddingLeft="20dp"

                            android:layout_margin="10dp"

                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:layout_weight="1"

                            android:orientation="horizontal">


                            <TextView

                                android:id="@+id/textView8"

                                android:textSize="16sp"

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:layout_gravity="center"

                                android:fontFamily="@font/inter"

                                android:text="@string/bill_date" />


                            <EditText

                                android:id="@+id/bill_date"

                                android:layout_width="match_parent"

                                android:layout_height="30dp"

                                android:padding="1dp"

                                android:textColor="#0A0A0A"

                                android:layout_gravity="center"

                                android:layout_marginLeft="8dp"

                                android:background="@drawable/layout_background"

                                android:textSize="14sp"

                                android:fontFamily="@font/inter"

                                android:gravity="left"

                                android:inputType="number"

                                android:text=""

                                android:textStyle="bold"

                                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout

                        android:id="@+id/customerNameLayout"

                        android:layout_margin="10dp"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:orientation="vertical">


                        <TextView

                            android:layout_width="match_parent"

                            android:textSize="15sp"

                            android:textStyle="bold"

                            android:textColor="#555555"

                            android:layout_height="wrap_content"

                            android:text="@string/customer_name" />




                        <EditText


                            android:textColor="#0A0A0A"

                            android:id="@+id/edtName"

                            style="@style/editText"

                            android:background="@drawable/layout_background"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:hint="@string/enter_name_billactivity"

                            android:singleLine="false"

                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    </LinearLayout>


                    <LinearLayout

                        android:layout_margin="10dp"

                        android:id="@+id/contactNoLayout"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"

                            android:textSize="15sp"

                            android:textStyle="bold"

                            android:textColor="#555555"

                            android:layout_height="wrap_content"

                            android:text="@string/customer_mobile_number" />




                        <EditText

                            android:drawableRight="@drawable/ic_baseline_contacts_24"

                            android:id="@+id/edtMobNo"

                            android:onClick="clickButton"

                            style="@style/editText"

                            android:maxLength="10"

                            android:background="@drawable/layout_background"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:hint="@string/enter_mobile_number_optional"

                            android:singleLine="false"

                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    </LinearLayout>


                    <TextView

                        android:id="@+id/additionalDetails"

                        android:layout_width="wrap_content"

                        android:text="@string/additional_customer_details"

                        android:padding="5dp"

                        android:onClick="showHideAdditionalDetails"

                        android:textStyle="bold"

                        android:layout_marginTop="10dp"

                        android:layout_marginBottom="10dp"

                        android:gravity="center_vertical"

                        android:textColor="#266CE4"

                        android:drawableRight="@drawable/ic_add_circle"

                        android:drawablePadding="5dp"

                        app:layout_constraintLeft_toLeftOf="parent"

                        app:layout_constraintTop_toBottomOf="@+id/contactNoLayout"

                        android:layout_height="wrap_content" />


                    <LinearLayout

                        android:id="@+id/AddressLayout"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:orientation="vertical"

                        android:visibility="gone"

                        app:layout_constraintTop_toBottomOf="@+id/additionalDetails"

                        android:padding="5dp"

                        android:weightSum="10">


                        <TextView

                            android:layout_width="match_parent"

                            android:textSize="15sp"

                            android:textStyle="bold"

                            android:textColor="#555555"

                            android:layout_height="wrap_content"

                            android:text="Customer Address" />




                        <EditText

                            android:textColor="#0A0A0A"

                            android:id="@+id/edtAddress"

                            style="@style/editText"

                            android:background="@drawable/layout_background"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:hint="Enter Address"

                            android:singleLine="false"

                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/GSTLayout"


                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:orientation="vertical"

                        app:layout_constraintTop_toBottomOf="@+id/AddressLayout"

                        android:padding="5dp"

                        android:visibility="gone"

                        android:weightSum="10">


                        <TextView

                            android:layout_width="match_parent"

                            android:textSize="15sp"

                            android:textStyle="bold"

                            android:textColor="#555555"

                            android:layout_height="wrap_content"

                            android:text="Customer GST Details" />




                        <EditText

                            android:textColor="#0A0A0A"

                            android:id="@+id/edtGST"

                            style="@style/editText"

                            android:background="@drawable/layout_background"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:hint="Enter GST Number"

                            android:singleLine="false"

                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                    </LinearLayout>


                    <LinearLayout

                        android:id="@+id/gstTypeLayout"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:orientation="vertical"

                        android:padding="10dp"

                        android:visibility="visible"

                        android:weightSum="10"

                        app:layout_constraintTop_toBottomOf="@+id/GSTLayout">


                        <TextView

                            android:id="@+id/GSTTypeLblTV"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:text="@string/gst_type"

                            android:textColor="#555555"

                            android:textSize="15sp"

                            android:textStyle="bold" />



                        <Spinner

                            android:id="@+id/gstType"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"



                            android:background="@drawable/spinnerbggray"

                            android:entries="@array/gst_type"

                            android:inputType="phone"

                            android:maxLength="10"

                            android:padding="5dp"

                            android:singleLine="true"

                            android:textSize="11dp" />



                    </LinearLayout>


                    <androidx.cardview.widget.CardView

                        android:elevation="9dp"

                        android:layout_margin="8dp"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">


                        <include

                            android:id="@+id/included_layout_item_bill"

                            layout="@layout/layout_item_bill"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:visibility="visible" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:id="@+id/cardItemList"


                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:elevation="9dp"


                        android:layout_margin="8dp">


                        <LinearLayout

                            android:orientation="vertical"


                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">


                            <LinearLayout

                                android:visibility="gone"

                                android:id="@+id/ItemTopLayout"

                                android:layout_marginTop="5dp"

                                app:layout_goneMarginBottom="10dp"

                                android:layout_width="match_parent"

                                app:layout_constraintTop_toTopOf="parent"

                                app:layout_constraintLeft_toLeftOf="parent"

                                app:layout_constraintRight_toRightOf="parent"

                                android:orientation="horizontal"

                                android:layout_height="wrap_content">

                                <TextView

                                    android:id="@+id/tvSrNoHdTv"

                                    android:text="Sr no"

                                    android:layout_weight="1"

                                    android:textStyle="bold"

                                    android:gravity="center"

                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content" />


                                <TextView

                                    android:id="@+id/quantityHdTv"

                                    android:text="QTY"

                                    android:layout_weight="1.5"

                                    android:textStyle="bold"

                                    android:layout_width="0dp"

                                    android:gravity="center"


                                    android:layout_height="wrap_content" />


                                <TextView

                                    android:id="@+id/gstTitle"

                                    android:text="GST"

                                    android:layout_weight="1.5"

                                    android:textStyle="bold"

                                    android:gravity="center"


                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content" />

                                <TextView

                                    android:id="@+id/priceHdTv"

                                    android:text="Price"

                                    android:layout_weight="2"

                                    android:textStyle="bold"

                                    android:gravity="center"


                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content" />

                                <TextView

                                    android:id="@+id/totalHdTv"

                                    android:text="Total"

                                    android:layout_weight="2"

                                    android:textStyle="bold"

                                    android:gravity="center"

                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content" />




                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView

                                android:id="@+id/invoiceItems"

                                android:layout_width="match_parent"

                                android:layout_height="wrap_content">


                            </androidx.recyclerview.widget.RecyclerView>

                            <!--<include-->

                            <!--layout="@layout/new_bill_item"></include>-->

                            <!--<include-->

                            <!--layout="@layout/new_bill_item"></include>-->

                            <Button

                                android:visibility="gone"

                                android:id="@+id/addMoreItem"

                                android:layout_marginTop="20dp"

                                android:layout_width="200dp"

                                android:gravity="center"

                                android:onClick="addMoreItem"

                                android:layout_marginBottom="15dp"

                                android:layout_gravity="center"

                                android:textColor="@color/colorPrimary"

                                android:textStyle="bold"

                                android:background="@drawable/add_item_structure"

                                android:layout_height="wrap_content"

                                android:layout_weight="1"

                                android:text="Add New Item" />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">


                        <LinearLayout

                            xmlns:android="http://schemas.android.com/apk/res/android"

                            xmlns:app="http://schemas.android.com/apk/res-auto"

                            xmlns:tools="http://schemas.android.com/tools"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:fitsSystemWindows="true"

                            android:background="#ffff"

                            android:orientation="vertical"

                            >


                            <LinearLayout

                                android:layout_margin="10dp"

                                android:layout_width="match_parent"

                                android:paddingBottom="10dp"

                                android:layout_height="wrap_content"

                                android:orientation="horizontal">


                                <TextView

                                    android:layout_weight="1"

                                    android:layout_width="wrap_content"

                                    android:layout_height="match_parent"

                                    android:layout_gravity="left"

                                    android:id="@+id/billDets"

                                    android:fontFamily="@font/inter"

                                    android:textStyle="bold"

                                    android:textSize="18sp"

                                    android:textColor="@color/black"

                                    android:text="Bill Details" />


                                <TextView

                                    android:layout_width="wrap_content"

                                    android:layout_gravity="center"

                                    android:gravity="right"

                                    android:id="@+id/addDisc"

                                    android:onClick="discVisible"

                                    android:fontFamily="@font/inter"

                                    android:background="#ffffff"

                                    android:textColor="#266CE4"

                                    android:layout_height="20dp"

                                    android:text="Add Discount">


                                </TextView>

                            </LinearLayout>

                            <View

                                android:layout_width="wrap_content"

                                android:layout_height="1dp"

                                android:background="@color/borderOpaque"/>


                            <LinearLayout

                                android:layout_marginTop="10dp"

                                android:layout_marginLeft="10dp"

                                android:layout_marginRight="10dp"

                                android:layout_marginBottom="4dp"

                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_weight="1"

                                android:orientation="horizontal">


                                <TextView

                                    android:layout_gravity="center"

                                    android:id="@+id/amtBeforeTaxLabelTV"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"

                                    android:fontFamily="@font/inter"

                                    android:textSize="15sp"

                                    android:text="Amount:" />


                                <TextView

                                    android:id="@+id/tvAmountBeforeTax"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"

                                    android:fontFamily="@font/inter"

                                    android:textSize="15sp"

                                    android:gravity="right"

                                    android:text="" />

                            </LinearLayout>


                            <LinearLayout

                                android:layout_marginLeft="10dp"

                                android:layout_marginRight="10dp"

                                android:layout_marginBottom="4dp"

                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_weight="1"

                                android:orientation="horizontal">


                                <TextView

                                    android:id="@+id/taxLabelTV"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"

                                    android:layout_gravity="center"

                                    android:fontFamily="@font/inter"

                                    android:textSize="15sp"

                                    android:text="GST:" />


                                <TextView

                                    android:id="@+id/tvAmountGST"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"

                                    android:gravity="right"

                                    android:fontFamily="@font/inter"

                                    android:textSize="15sp"

                                    android:text="" />

                            </LinearLayout>


                            <LinearLayout

                                android:layout_marginLeft="10dp"

                                android:layout_marginRight="10dp"

                                android:layout_marginBottom="4dp"

                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_weight="1"

                                android:visibility="gone"

                                android:id="@+id/discountLayout"

                                android:orientation="horizontal">


                                <TextView

                                    android:id="@+id/textView12"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"

                                    android:layout_gravity="center"

                                    android:fontFamily="@font/inter"

                                    android:textSize="15sp"

                                    android:text="Discount:" />


                                <EditText

                                    android:id="@+id/edtDiscountPercent"

                                    style="@style/editText"

                                    android:layout_width="80dp"

                                    android:layout_height="40dp"

                                    android:layout_gravity="center"

                                    android:layout_margin="2dp"

                                    android:fontFamily="@font/inter"

                                    android:hint="In %"

                                    android:textSize="14sp" />


                                <TextView

                                    android:layout_margin="2dp"

                                    android:id="@+id/textView13"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:text="OR"

                                    android:layout_gravity="center"

                                    android:textSize="15sp"

                                    android:gravity="right"/>


                                <EditText

                                    android:id="@+id/edtDiscountAmt"

                                    style="@style/editText"

                                    android:layout_width="100dp"

                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"

                                    android:layout_margin="2dp"

                                    android:fontFamily="@font/inter"

                                    android:hint="In Rs"

                                    android:text=""

                                    android:textSize="14sp" />

                            </LinearLayout>


                            <View

                                android:layout_marginTop="7dp"

                                android:layout_width="wrap_content"

                                android:layout_height="1dp"

                                android:background="@color/borderOpaque"/>


                            <LinearLayout

                                android:layout_margin="10dp"

                                android:layout_width="match_parent"

                                android:layout_height="match_parent"

                                android:layout_weight="1"

                                android:orientation="horizontal">


                                <TextView

                                    android:fontFamily="@font/inter"

                                    android:textSize="18sp"

                                    android:textColor="#0A0A0A"

                                    android:layout_margin="2dp"

                                    android:id="@+id/textView15"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"

                                    android:textStyle="bold"

                                    android:text="Total Amount:" />


                                <TextView


                                    android:fontFamily="@font/inter"

                                    android:textSize="18sp"

                                    android:layout_margin="2dp"

                                    android:id="@+id/tvTotal"

                                    android:textStyle="bold"

                                    android:layout_gravity="center"

                                    android:gravity="right"

                                    android:textColor="#0A0A0A"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"

                                    android:text="" />

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </ScrollView>


    <LinearLayout

        android:weightSum="2"
        android:visibility="gone"

        android:background="@color/white"

        android:layout_gravity="bottom"

        android:gravity="center"

        android:id="@+id/viewDetsLay"

        android:layout_alignParentBottom="true"

        android:padding="20dp"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <LinearLayout

            android:layout_weight="1"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:id="@+id/tvTotalFinal"

                android:fontFamily="@font/inter"

                android:textStyle="bold"

                android:textColor="#000000"

                android:textSize="20sp"

                >


            </TextView>

            <TextView

                android:fontFamily="@font/inter"

                android:textStyle="bold"

                android:id="@+id/viewDets"

                android:onClick="onClickViewDets"

                android:textColor="#266CE4"

                android:textSize="15sp"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:text="View details"

                >


            </TextView>



        </LinearLayout>

        <Button

            android:layout_weight="1"

            android:id="@+id/nextBtn"

            android:layout_gravity="center"

            android:layout_width="wrap_content"

            android:text="Make Bill"

            android:gravity="center"

            android:onClick="gotoPDFActivity"

            android:textColor="@color/white"


            android:background="@drawable/login_button_structure"

            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
