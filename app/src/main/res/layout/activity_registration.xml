<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.RegistrationActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_weight="9.5"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:orientation="vertical">


           <TableRow
               android:id="@+id/shopName"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:gravity="center_vertical"
               android:layout_height="wrap_content"
               android:weightSum="4"
               android:layout_margin="5dp">
               <TextView
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_marginLeft="5dp"
                   android:text="@string/shopNameEnt"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   ></TextView>
               <EditText
                   android:layout_weight="2"
                   android:id="@+id/shopNameEdt"
                   android:layout_width="0dp"
                   android:textSize="13dp"
                   android:layout_margin="5dp"
                   android:textColor="@color/grey"
                   android:layout_height="35dp"
                   android:hint="@string/shopName"
                   android:background="@drawable/card_edge"
                   android:singleLine="true" />
           </TableRow>




           <TableRow
               android:id="@+id/shopAddress"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="4"
               android:gravity="center"
               android:layout_margin="5dp">
               <TextView
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:text="@string/shopAddressEnt"
                   android:layout_marginLeft="5dp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   ></TextView>

               <EditText
                   android:layout_weight="2"
                   android:id="@+id/shopAddressEdt"
                   android:layout_width="0dp"
                   android:layout_margin="5dp"
                   android:textSize="13dp"
                   android:textColor="@color/grey"
                   android:hint="@string/shopAddress"
                   android:layout_height="35dp"
                   android:background="@drawable/card_edge"
                   android:singleLine="true" />
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="4"
               android:visibility="gone"
               android:gravity="center"
               android:layout_margin="5dp">
               <TextView
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:text="Mobile Number"
                   android:textStyle="bold"
                   android:layout_marginLeft="5dp"
                   android:layout_height="wrap_content"
                   ></TextView>

               <EditText
                   android:id="@+id/mobileNoEdt"
                   android:layout_width="0dp"
                   android:hint="@string/mobileNo"
                   android:inputType="phone"
                   android:maxLength="10"
                   android:textColor="@color/grey"
                   android:enabled="false"
                   android:layout_height="35dp"
                   android:textSize="13dp"
                   android:layout_margin="5dp"
                   android:background="@drawable/card_edge"
                   android:layout_weight="2"
                   android:singleLine="true" />
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="4"
               android:gravity="center"
               android:layout_margin="5dp">
               <TextView
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:text="@string/city"

                   android:layout_marginLeft="5dp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   ></TextView>
               <AutoCompleteTextView
                   android:id="@+id/city"
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/add_product_spinner_height"
                   android:textColor="@color/grey"
                   android:hint="@string/enter_city"
                   android:background="@drawable/card_edge"
                   android:layout_margin="5dp"
                   android:textSize="13dp"
                   android:entries="@array/states"
                   android:layout_marginTop="@dimen/add_product_spinner_margin_top"
                   />
               <!--            <com.toptoche.searchablespinnerlibrary.SearchableSpinner-->
               <!--                android:layout_weight="2"-->
               <!--                android:id="@+id/city"-->
               <!--                android:layout_width="0dp"-->
               <!--                android:layout_height="@dimen/add_product_spinner_height"-->
               <!--                android:layout_margin="5dp"-->
               <!--                android:textColor="@color/grey"-->
               <!--                android:textSize="13dp"-->
               <!--                android:layout_marginTop="@dimen/add_product_spinner_margin_top"-->
               <!--                android:hint="@string/enter_city"-->
               <!--                android:background="@drawable/spinnerbggray"  />-->
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="4"
               android:gravity="center"
               android:layout_margin="5dp">
               <TextView
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:text="@string/state"
                   android:layout_marginLeft="5dp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   ></TextView>
               <AutoCompleteTextView
                   android:id="@+id/state"
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/add_product_spinner_height"
                   android:textColor="@color/grey"
                   android:hint="@string/enter_state"
                   android:background="@drawable/card_edge"
                   android:layout_margin="5dp"
                   android:textSize="13dp"
                   android:entries="@array/states"
                   android:layout_marginTop="@dimen/add_product_spinner_margin_top"
                   />
               <!--            <com.toptoche.searchablespinnerlibrary.SearchableSpinner-->
               <!--                android:id="@+id/state"-->
               <!--                android:layout_weight="2"-->
               <!--                android:layout_width="0dp"-->
               <!--                android:layout_height="@dimen/add_product_spinner_height"-->
               <!--                android:textColor="@color/grey"-->
               <!--                android:textSize="13dp"-->
               <!--                android:hint="@string/enter_state"-->
               <!--                android:background="@drawable/spinnerbggray"-->
               <!--                android:layout_margin="5dp"-->
               <!--                android:entries="@array/states"-->
               <!--                android:layout_marginTop="@dimen/add_product_spinner_margin_top" />-->

           </TableRow>



           <TableRow
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="4"
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_margin="5dp">
               <TextView
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:text="@string/pinCode"
                   android:textStyle="bold"
                   android:layout_marginLeft="5dp"
                   android:layout_height="wrap_content"
                   ></TextView>

               <EditText
                   android:layout_weight="2"
                   android:id="@+id/pinCodeEdt"
                   android:layout_width="0dp"
                   android:layout_height="35dp"
                   android:hint="@string/enter_pinCode"
                   android:inputType="phone"
                   android:textColor="@color/grey"
                   android:maxLength="6"
                   android:layout_margin="5dp"
                   android:textSize="13dp"
                   android:background="@drawable/card_edge"
                   android:singleLine="true" />
           </TableRow>
           <android.support.design.widget.TextInputLayout
               android:id="@+id/firstName"
               android:visibility="gone"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">

               <EditText
                   android:id="@+id/firstNameEdt"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/firstName"
                   android:singleLine="true" />
           </android.support.design.widget.TextInputLayout>

           <android.support.design.widget.TextInputLayout
               android:id="@+id/lastName"
               android:visibility="gone"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">

               <EditText
                   android:id="@+id/lastNameEdt"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/lastName"
                   android:singleLine="true" />
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:id="@+id/mobileNo"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="gone"
               android:layout_margin="5dp">


           </android.support.design.widget.TextInputLayout>






           <android.support.design.widget.TextInputLayout
               android:id="@+id/pinCode"
               android:visibility="gone"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:layout_margin="5dp">


           </android.support.design.widget.TextInputLayout>

       </LinearLayout>
       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:gravity="center"
           android:layout_below="@+id/layout"
           >
           <CheckBox
               android:id="@+id/agreeTermsAndCondition"
               android:layout_width="wrap_content"
               android:layout_centerHorizontal="true"

               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/agreeTermsAndConditionText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="I accept Terms and Condition"
               android:onClick="gotoToTermsAndConsitions"
               ></TextView>
       </TableRow>


   </LinearLayout>
</ScrollView>


    <Button
        android:id="@+id/btnRegister"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_margin_top"
android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:onClick="registerUser"
        android:text="Register"
        android:textColor="@android:color/white" />
</RelativeLayout>