        <!--            android:onClick="startHelpActivity"-->
        <!--            android:drawableRight="@drawable/ic_headset_mic"-->
        <!--            android:background="@drawable/card_edge"-->
        <!--            android:layout_width="150dp"-->
        <!--            android:layout_height="50dp" />-->


    </LinearLayout>


</RelativeLayout>

</RelativeLayout>
