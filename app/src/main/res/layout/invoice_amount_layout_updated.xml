<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llForHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"

    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:singleLine="false"
            android:text="Thank you for your Purchase!"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="@dimen/_17spText"
            android:singleLine="false"
            android:text="Terms and Conditions"
            android:textColor="@color/color_black"
            android:textStyle="bold"

            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="@dimen/_15spText"
            android:singleLine="false"
            android:text="1. Good once sold can not be taken back.\n2. All disputes are subject to state jurisdiction.\n3. Software generated bill so signature is not required"
            android:textColor="@color/color_black"
            android:textStyle="normal"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>


