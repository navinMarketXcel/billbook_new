<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_new_background"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity"
    android:padding="61dp">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Make Professional"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="GST Bills"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="242dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="246dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/artwork" />
    </LinearLayout>

    <Button
        android:id="@+id/yesGSt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button_structure"
        android:text="Add GST Number"
        android:textAllCaps="false"
        android:fontFamily="@font/inter"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/noGSt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gray_button_background"
        android:text="I don't have GST"
        android:textAllCaps="false"
        android:fontFamily="@font/inter"
        android:textColor="@color/colorPrimary" />



</LinearLayout>
