<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/category"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/add_product_text_size"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_product_spinner_height"
            android:layout_marginTop="@dimen/add_product_spinner_margin_top"
            android:background="@drawable/spinnerbg">

        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_product_textview_margin_top"
            android:gravity="center"
            android:text="@string/brand"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/add_product_text_size"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerBrand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_product_spinner_height"
            android:layout_marginTop="@dimen/add_product_spinner_margin_top"
            android:background="@drawable/spinnerbg">

        </Spinner>

        <TextView
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_product_textview_margin_top"
            android:gravity="center"
            android:text="@string/product"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/add_product_text_size"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinnerProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_product_spinner_height"
            android:layout_marginTop="@dimen/add_product_spinner_margin_top"
            android:background="@drawable/spinnerbg">

        </Spinner>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Price (Rs)"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edt_border"
                android:hint="@string/enter_rate_if_want"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="QTY"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtQuantities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edt_border"
                android:hint="@string/enter_quantities"
                android:inputType="number"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Discount (%)"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edt_border"
                android:hint="@string/enter_quantities"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:singleLine="true"
                android:text="0"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="GST (%)"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtGST"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edt_border"
                android:hint="@string/enter_gst"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="IGST (%)"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtIGST"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edt_border"
                android:hint="@string/enter_igst"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15sp" />


        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="horizontal"-->
        <!--android:padding="5dp"-->
        <!--android:weightSum="10">-->

        <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="4"-->
        <!--android:text="HSNCode"-->
        <!--android:textSize="15sp"-->
