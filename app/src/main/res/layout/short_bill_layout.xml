<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:id="@+id/short_Bill"
    tools:context=".activities.PDFActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="1dp"
        android:weightSum="10"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvVendorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:text="Tushar Electronics"
                        android:textColor="@color/color_black"
                        android:textSize="15dp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/tvStoreAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="JM Road, Pune 53"
                        android:textColor="@color/color_black"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/mobileNoRetailer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mobile No"
                        android:textColor="@color/color_black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/emailRetailer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Email"
                        android:textColor="@color/color_black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvGSTNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="GST NO"
                        android:textColor="@color/color_black"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="@string/tax_invoice"
                        android:textColor="@color/color_black"
                        android:textSize="14dp" />
                    <View
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@color/material_blue_grey_95"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/dash_line"
                        android:layerType="software" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:text="@string/bill_no_short_bill"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/txtInvoiceNo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:padding="5dp"
                                    android:text="1"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:text="@string/date"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/txtInvoiceDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:padding="5dp"
                                    android:text="22-03-2018"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="4"
                                    android:text="@string/billed_to"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/edtName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:inputType="textMultiLine"
                                    android:maxLength="50"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:singleLine="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/edtAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:inputType="textMultiLine"
                                    android:maxLength="50"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:singleLine="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="@string/mobile_no"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/edtMobNo"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:inputType="phone"
                                    android:gravity="left"
                                    android:maxLength="10"
                                    android:padding="5dp"
                                    android:singleLine="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:background="@drawable/dash_line"
                            android:layerType="software" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llForHeaderTax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="11">


                        <TextView
                            android:id="@+id/productTax"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Tax%"
                            android:textAllCaps="true"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_9sdp"

                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="2dp"
                        android:text="@string/description_short_bill"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/llForHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="11">


                        <TextView
                            android:id="@+id/productLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:padding="5dp"
                            android:textSize="@dimen/_9sdp"
                            android:singleLine="true"
                            android:textAllCaps="true"
                            android:text="Qty."
                            android:textColor="@color/color_black"

                            />


                        <TextView
                            android:id="@+id/productMRP"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="MRP"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="@color/color_black" />

                        <TextView
                            android:id="@+id/tv_preTax"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="12dp"
                            android:textColor="@color/color_black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:textSize="@dimen/_9sdp"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Rate"
                            android:textColor="@color/color_black"/>

                        <TextView
                            android:id="@+id/CGST"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_black"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/IGST"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/productAmnt"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:padding="5dp"
                            android:textSize="@dimen/_9sdp"
                            android:singleLine="true"
                            android:text="NetAmnt"
                            android:textColor="@color/color_black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/dash_line"
                        android:layerType="software" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewInvoiceProducts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:background="@drawable/dash_line"
                    android:layerType="software" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/items_short_bill"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/InvoiceItems"
                            android:layout_width="39dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:padding="5dp"
                            android:text="1"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Qty:"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/InvoiceItemsQty"
                            android:layout_width="39dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:padding="5dp"
                            android:text="1"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="15">

                        <TextView
                            android:id="@+id/InvoiceNetAmnt"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:padding="5dp"
                            android:text="1000.00"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_8sdp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:background="@drawable/dash_line"
                android:layerType="software" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Total Amount"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/InvoiceNetAmntTotal"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:padding="5dp"
                        android:text="1000.00"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:padding="5dp"
                    android:gravity="end"
                    android:text="@string/total_savings"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">
                <TextView
                    android:id="@+id/InvoiceTotalDiscount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:padding="5dp"
                    android:text="200.00"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="end"
                    android:text="GST"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="5dp"
                    android:text="TAX AMT"
                    android:gravity="start"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="end"
                    android:text="SGST"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/InvoiceSGSTAmt"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="5dp"
                    android:text="00.00"
                    android:gravity="start"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="end"
                    android:text="CGST"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/InvoiceCGSTAmt"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="5dp"
                    android:text="00.00"
                    android:gravity="start"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="end"
                    android:text="IGST"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
