<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editGSTyes"
    app:behavior_peekHeight="0dp"

    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_height="match_parent"
    android:background="@drawable/layout_new_background"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp">
        <Button
            android:layout_margin="20dp"
            android:id="@+id/cancelGst"
            android:background="@drawable/vector"
            android:layout_width="20dp"
            android:layout_height="20dp">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView

            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="GST Number"
            android:textColor="#0A0A0A"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edtGSTnumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLength="15"
            android:background="@drawable/layout_background"
            android:fontFamily="@font/inter"
            android:hint="Enter your GST Number"
             />


        <Button
            android:id="@+id/btnUpdGst"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_button_structure"
            android:fontFamily="@font/inter"
            android:textAllCaps="false"
            android:text="Update"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@drawable/editgstnumber_layout"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:textStyle="normal"
                android:text="You can change/update your GST details from your profile settings."
                android:textSize="17sp"
                android:textColor="#0A0A0A"/>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>