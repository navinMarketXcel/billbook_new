<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llForHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="11"
    >
    <TextView
        android:id="@+id/tvProductNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="13dp"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:gravity="start"
        android:padding="5dp"
        android:singleLine="false"
        android:textColor="@color/color_black"

        />
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:textSize="13dp"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:gravity="start"
        android:padding="5dp"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:text="PRODUCT"
        android:textColor="@color/color_black"

        />


    <TextView
        android:id="@+id/tvQTY"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:textSize="13dp"
        android:padding="5dp"
        android:singleLine="false"
        android:text="QTY"
        android:textColor="@color/color_black"

        />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="13dp"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:gravity="start"
        android:padding="5dp"
        android:text="PRICEerwerwerwerwer"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_preTaxValue"
        android:layout_width="0dp"
        android:textSize="13sp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:visibility="gone"
        android:gravity="start"
        android:padding="5dp"
        android:singleLine="false"
        tools:text="1234.23"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/SGSTValue"
        android:layout_width="0dp"
        android:textSize="13dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:gravity="start"
        android:inputType="textMultiLine"

        android:padding="5dp"
        android:singleLine="false"
        android:text="SGST"

        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/CGSTValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:gravity="start"
        android:inputType="textMultiLine"

        android:textSize="13dp"
        android:padding="5dp"
        android:singleLine="false"
        android:text="CGST"

        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/IGSTValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:inputType="textMultiLine"
        android:visibility="gone"
        android:gravity="start"
        android:padding="5dp"
        android:textSize="13dp"
        android:singleLine="false"
        android:text="SGST"

        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/card_lined"
        android:ellipsize="end"
        android:gravity="start"
        android:inputType="textMultiLine"

        android:padding="5dp"
        android:singleLine="false"
        android:textColor="@color/color_black"
        android:textSize="13dp"

        tools:text="120,000,00,0.0000" />
</LinearLayout>
