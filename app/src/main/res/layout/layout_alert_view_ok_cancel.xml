<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/alert_view_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/textXLargeBold"
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Quit Billing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtMessage"
            style="@style/textRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="start"
            android:textColor="@color/text_color"
            android:text="@string/quit_bill"
            tools:text="@string/quit_bill" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2"
            android:gravity="start"
            >

            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                style="?borderlessButtonStyle"
                android:textStyle="bold"
                android:text="@string/yes"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/delete_button"
                android:textColor="@color/red_2"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btnCancel"
                style="?borderlessButtonStyle"

                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/no_button"
                android:text="@android:string/ok"
                android:textAllCaps="false"
                android:textColor="@color/no_color"
                />
            <!-- <Button
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:id="@+id/btnCancel"
                 style="?borderlessButtonStyle"
                 android:layout_height="wrap_content"
                 android:layout_margin="@dimen/_5sdp"
                 android:background="@drawable/delete_button"
                 android:text="@android:string/ok"
                 android:textColor="?attr/colorAccent"
                 android:textSize="10dp"
                 />-->

        </LinearLayout>

    </LinearLayout>







</RelativeLayout>


