<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SearchInvoiceActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="3dp"
            android:background="?attr/colorPrimary"
            app:layout_anchor="@+id/appBarLayout"
            app:layout_anchorGravity="center"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivToolBarBack"
                    style="@style/textRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    />

                <TextView
                    style="@style/textLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:fontFamily="@font/inter"
                    android:text="@string/search_invoice">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/app_bar_structure"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/helpLine"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/icons8_whatsapp_144"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:text="Help">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="7dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnYouTube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/app_bar_structure"
                android:orientation="horizontal"
                android:padding="8dp">


                <Button
                    android:id="@+id/wathcDemo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/helpLine"
                    android:background="@mipmap/youtube"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:text="Demo">

                </TextView>

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="2dp"

        app:contentPadding="10dp"
        card_view:cardCornerRadius="5dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter"
                    >

                </TextView>

                <EditText
                    android:id="@+id/edtMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_search_white_24dp"
                    style="@style/editText"
                    android:hint="Enter Mobile No Or Customer Name"
                    android:inputType="text"
                    android:maxLength="10"
                    android:padding="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/toAndFromDate"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/inter"
                    android:text="Choose Period"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                </TextView>

                <Spinner
                    android:id="@+id/dateSpinner"
                    style="@style/mySpinnerForUnit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:hint="Select Date"
                    android:background="@drawable/spinnerbg"
                    android:drawableLeft="@drawable/ic_calendar_today"
                    android:drawablePadding="5dp"
                    android:entries="@array/dateCalender"
                    android:fadeScrollbars="false"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:padding="5dp"
                    android:singleLine="true"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/btnSearch"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/login_button_structure"
                android:text="@string/search"
                android:fontFamily="@font/inter"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="2dp"
        app:contentPadding="10dp"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/textLargeBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/black"
                        android:text="@string/recent_bills" />

                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_weight="0.5"
                            android:fontFamily="@font/inter"
                            android:textSize="15sp"
                            android:id="@+id/filterTv"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:drawableRight="@drawable/ic_baseline_filter_alt_24"
                            android:gravity="center"
                            android:onClick="clickFilter"
                            android:text="Filter"
                            android:textColor="#266CE4"
                            >

                        </TextView>

                        <TextView
                            android:layout_weight="0.5"
                            android:fontFamily="@font/inter"
                            android:textSize="15sp"
                            android:id="@+id/sortTv"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Sort"
                            android:gravity="center"

                            android:layout_gravity="center"
                            android:drawableRight="@drawable/sorting"
                            android:background="@color/white"
                            android:textColor="#266CE4">

                        </TextView>

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/inter"
                            android:textSize="15sp"
                            android:id="@+id/selectTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:onClick="clickSelect"
                            android:text="Select"
                            android:textColor="#266CE4"
                            >

                        </TextView>


                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/borderOpaque"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvRecordNotFound"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="250dp"
                android:background="@drawable/searchbg"
                android:gravity="center"
                />




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewInvoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/downloadAll"
                >


            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <Button
                android:gravity="center"
                android:id="@+id/deleteButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:onClick="deleteBulkBills"
                android:layout_margin="10dp"
                android:background="@drawable/delete_button"
                android:textColor="#E11900"
                android:visibility="gone"

                >

            </Button>
            <Button
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:id="@+id/downloadAll"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@drawable/login_button_structure"
                android:onClick="downloadInvoice"
                android:text="Download"
                android:textColor="@color/white"></Button>


        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>
