<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">


<LinearLayout
    android:layout_marginTop="5dp"
    android:id="@+id/itemDetailLayout"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvSrNoTv"
            android:text="1."
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/itemNameHdTv"
            android:text="Samsung A51 Usdfsdf sddfs"
            android:layout_weight="3.5"
            android:textStyle="bold"
            android:gravity="center"
            android:inputType="textMultiLine"

            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/quantityHdTv"
            android:text="1"
            android:layout_weight="1.5"
            android:textStyle="bold"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/gstTV"
            android:text="1"
            android:layout_weight="1.5"
            android:textStyle="bold"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/priceHdTv"
            android:text="25000"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="false"
            android:textStyle="bold"
            android:inputType="textMultiLine"

            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/totalHdTv"
            android:text="25000"
            android:inputType="textMultiLine"

            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"

            android:layout_width="0dp"
            android:layout_height="wrap_content" />


</LinearLayout>
<TableRow
    android:id="@+id/editLayout"
    android:layout_width="150dp"
    android:layout_below="@+id/itemDetailLayout"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/card_edge_primary"
    >
        <TextView

            android:layout_alignParentLeft="true"
           android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/edit"
            android:drawableRight="@drawable/ic_edit"
            android:gravity="center"
            android:text="Edit"
            android:textColor="@color/white"
            android:layout_height="wrap_content">

        </TextView>
</TableRow>

        <TableRow
            android:id="@+id/deleteLayout"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/itemDetailLayout"
            android:layout_margin="10dp"
            android:background="@drawable/card_edge_primary"
            >
                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:drawableRight="@drawable/ic_delete"
                    android:drawablePadding="5dp"
                    android:text="Delete"
                        android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>
        </TableRow>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_black"
            android:layout_below="@+id/editLayout"
            >

        </View>
</RelativeLayout>