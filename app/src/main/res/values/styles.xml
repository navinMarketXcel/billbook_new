<resources>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">false</item>
    </style>
    <style name="CustomOtpActivity" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowBackground">@color/color_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Launcher">
        <item name="fontFamily">@font/inter</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="ActivityDialogTheme" parent="Base.Theme.AppCompat.DialogWhenLarge">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">11dp</item>
    </style>
    <style name="mySpinnerForUnit" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">11dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/edt_background</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="etNormalText" parent="editText">
        <item name="android:inputType">text</item>
        <item name="android:digits">ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz0123456789</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="etAlphaNumeric" parent="editText">
        <item name="android:inputType">text</item>
        <item name="android:digits">ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz0123456789/.-!\u003c\u003e\u0027\u0022\u0026\u002c\002e\u2010\u0028\u0029\u0064\u0023\u002a\u003b\u003a\u0040\u005c\u007c\u002e\u2010\u005f\u2212</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="etDecimal" parent="editText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--text styles-->
    <style name="textXLargeBold" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="textXLargeMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="textXLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>


    <style name="textLargeBold" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="textLargeBoldMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="textLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="textRegular" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="textRegularMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="textRegularBold" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>


    <style name="textSmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="textSmallMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="textSmallBold" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>



    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textInputLayoutNew" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextAppearance">@style/textRegular</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_3sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_3sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_3sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_3sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
